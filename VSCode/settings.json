{
  // Open json editor for settings
  "workbench.settings.editor": "json",

  "editor.rulers": [
    80,
    70,
  ],

  // ignore git-ignored files when searching
  "search.useIgnoreFiles": true,

  // glennraya vscode-settings-json
  "window.newWindowDimensions": "inherit",
  "editor.snippetSuggestions": "top",


  // Theme
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "catppuccin-icons.hidesExplorerArrows": true,

  // Font
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "GeistMono Nerd Font",
  "editor.fontLigatures": false,
  "editor.fontFamily": "GeistMono Nerd Font",
  "scm.inputFontFamily": "GeistMono Nerd Font",
  "chat.editor.fontFamily": "GeistMono Nerd Font",
  "debug.console.fontFamily": "GeistMono Nerd Font",
  "editor.codeLensFontFamily": "GeistMono Nerd Font",
  "notebook.output.fontFamily": "GeistMono Nerd Font",

  // Suggestions
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Cursor
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",

  // Vim
  "vim.handleKeys": {
    "<C-x>": false,
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.useSystemClipboard": true,
  "vim.enableNeovim": true,
  "vim.hlsearch": false,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.scrollOff": 8,
  "vim.leader": "<space>",
  "vim.easymotion": true,

  // UI
  "editor.lineNumbers": "relative",
  "notebook.lineNumbers": "on",
  "editor.wordWrap": "off",
  "editor.tabSize": 4,
  "[markdown]": {
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false
  },
  "[markdown-math]": {
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false
  },
  "[markdown_latex_combined]": {
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false
  },

  "explorer.compactFolders": false,
  "editor.linkedEditing": true,
  "files.trimTrailingWhitespace": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.scrollbar.horizontal": "auto",

  // TODO Tree
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "gutterIcon": true,
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "iconColour": "lime"
    },
    "FIXME": {
      "iconColour": "orange"
    },
    "BUG": {
      "iconColour": "red"
    },
    "QUESTION": {
      "icon": "light-bulb",
      "iconColour": "yellow"
    },
    "NOTE": {
      "iconColour": "blue"
    }
  },
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "QUESTION", "NOTE"],

  // APC
  // "apc.activityBar": {
